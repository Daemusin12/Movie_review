<%= form_with model: review, url: path, data: { turbo: false } do |form| %>
  <% if review.errors.any? %>
    <ul>
      <% review.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <% if current_page?(:controller => 'reviews', :action => 'new') %>
    <div>
      <%= form.label :rating %>
      <%= form.text_field :rating %>
    </div>
  <% end %>
  <%= form.submit %>
<% end %>